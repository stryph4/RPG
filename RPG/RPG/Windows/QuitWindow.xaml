<Window x:Class="RPG.QuitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG"
        mc:Ignorable="d"
        Title="QuitWindow" Height="200" Width="400">
    <Grid Background="Gray">
        <Label x:Name="QuitConfirmation" Content="Are you sure you want to quit?" HorizontalAlignment="Center" Margin="0,0,0,105" VerticalAlignment="Center" FontFamily="Calibri" FontSize="18"/>
        <Button x:Name="YesQuit" Content="Yes" HorizontalAlignment="Left" Margin="75,0,0,50" VerticalAlignment="Bottom" Width="75" FontFamily="Calibri" FontSize="18" Click="YesQuit_Click"/>
        <Button x:Name="NoQuit" Content="No" HorizontalAlignment="Right" Margin="0,0,75,50" VerticalAlignment="Bottom" Width="75" FontFamily="Calibri" FontSize="18" Click="NoQuit_Click"/>
    </Grid>
</Window>
